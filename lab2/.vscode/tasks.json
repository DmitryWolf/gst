{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ сборка активного файла",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-O0",
                "-DLOCALENV=0",
                "${fileDirname}/client.cpp",
                "${fileDirname}/tcp.cpp",
                "${fileDirname}/generator.cpp",
                "-o",
                "${fileDirname}/main",
                "-lboost_system",
                "-pthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
  }